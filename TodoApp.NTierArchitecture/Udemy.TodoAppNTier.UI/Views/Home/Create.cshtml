@model WorkCreateDto
<html>
<head>
    <title>Todo App</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-2">
        <form asp-action="Create" asp-controller="home" method="post">
            <div class="mb-3">
                <label>İşin Tanımı : </label>
                <input  asp-for="@Model.Definition" class="form-control"/>
                <label></label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox"asp-for="@Model.IsCompleted"/>
                <label class="form-check-label" for="defaultCheck1">
                    Tamamlandı mı
                </label>
            </div>

            <div class="mb-3">
                <button type="submit" clclass="btn btn-primary">Kaydet</button>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            

        </form>
    </div>
</body>
</html>